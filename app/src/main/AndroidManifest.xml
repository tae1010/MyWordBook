<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.ac.kpu.mywordbook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/mainTheme">
        <activity android:name=".SharedWordBookActivity"></activity>
        <activity android:name=".WordBookActivity" />
        <activity android:name=".PictureTextActivity" />
        <activity android:name=".SignUpActivity"
            android:theme="@style/Theme.First"/>
        <activity android:name=".LoginActivity"
            android:theme="@style/Theme.First">

        </activity>

        <activity android:name=".Loadding"
            android:theme="@style/Theme.First">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />
    </application>

</manifest>